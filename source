#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{

	double lbs, inches, ft, bmi;

	printf("Enter weight in pounds:");
	scanf("%lf\n", lbs);
	printf("%lf\n", lbs);

	printf("Enter height in inches:");
	scanf("%lf\n", inches);
	printf("%lf\n", inches);

	system("pause");

	ft = (inches / 12);

	bmi = ((lbs * 4.88) / (ft * ft));

	printf("%lf\n", &bmi);

	if ((bmi<20))
	{
		printf("underweight");
	}
	else if ((bmi >= 20) && (bmi<25))
	{
		printf("normal");
	}
	else if ((bmi >= 25) && (bmi<30))
	{
		printf("slightly overweight");
	}
	else if ((bmi >= 30) && (bmi<40))
	{
		printf("overweight");
	}
	else
	{
		printf("extremely overweight");
	}

}
